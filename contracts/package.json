{
  "name": "privatezk-credit-scout-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for PrivateZK Credit Scout",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:verbose": "hardhat test --verbose",
    "coverage": "hardhat coverage",
    "deploy": "hardhat run scripts/deploy_all.ts --network mantle_testnet",
    "deploy:local": "hardhat run scripts/deploy_all.ts --network localhost",
    "export": "ts-node scripts/export_abis.ts",
