    "integrate:frontend": "npm run export:abis && ts-node scripts/integrate_frontend.ts",
    "check:ezkl": "ts-node scripts/setup_ezkl_verifier.ts",
    "clean": "hardhat clean"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "hardhat": "^2.22.0",
    "solidity-coverage": "^0.8.12",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "dotenv": "^16.4.5"
  },
  "dependencies": {
    "ethers": "^6.13.0"
  }
}

